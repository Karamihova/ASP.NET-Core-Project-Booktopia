@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="contact_section layout_padding">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="heading_container heading_center">
            <h2>
              @ViewData["Title"]
            </h2>
          </div>
          <form id="account" method="post">
              <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control">
                <span asp-validation-for="Input.Email" class="small text-danger"></span>
              </div>
              <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control">
                <span asp-validation-for="Input.Password" class="small text-danger"></span>
              </div>
              <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="btn-box">
                  <input class="input-button" type="submit" value="Log in"/> 
               </div>
                <div class="form-group text-center">
                    <p style="margin-top: 20px;">
                        <a id="forgot-password" asp-page="./ForgotPassword" style="color: black;">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: black;">Register as a new user</a>
                    </p>
                    </div>
           </form>
        </div>
      </div>
    </div>
  </section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
