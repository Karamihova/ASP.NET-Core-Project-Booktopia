@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="contact_section layout_padding">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="heading_container heading_center">
            <h2>
              @ViewData["Title"]
            </h2>
          </div>
          <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
              <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control">
                <span asp-validation-for="Input.Email" class="small text-danger"></span>
              </div>
              <div class="form-group">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control">
                <span asp-validation-for="Input.FullName" class="small text-danger"></span>
              </div>
              <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control">
                <span asp-validation-for="Input.Password" class="small text-danger"></span>
              </div>
              <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control">
                <span asp-validation-for="Input.ConfirmPassword" class="small text-danger"></span>
              </div>
               <div class="btn-box">
                  <input class="input-button" type="submit" value="Register"/> 
               </div>
           </form>
        </div>
      </div>
    </div>
  </section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
