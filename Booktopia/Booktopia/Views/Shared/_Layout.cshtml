<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <link rel="icon" href="~/images/favicon.png" type="image/gif" />
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <title>@ViewData["Title"] - Booktopia</title>
  <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />
  <link href="~/css/font-awesome.min.css" rel="stylesheet" />
  <link href="~/css/style.css" rel="stylesheet" />
  <link href="~/css/responsive.css" rel="stylesheet" />
</head>

 <header class="header_section">
      <div class="container-fluid">
        <nav class="navbar navbar-expand-lg custom_nav-container ">
          <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <span>
              Booktopia
            </span>
          </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class=""> </span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" asp-controller="Books" asp-action="All"> Books </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Categories" asp-action="All">Categories</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Quotes" asp-action="All"> Quotes</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Reviews" asp-action="All"> Reviews</a>
              </li>
              @if(!User.IsAdmin())
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Books" asp-action="Write">Write</a>
                        </li>
                    }
              <partial name="_LoginPartial" />
            </ul>
          </div>
        </nav>
      </div>
    </header>
<body>
   <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
<section class="info_section layout_padding2" >
    <div class="container">
      <div class="row">
          <div class="col-md-6 col-lg-3 info-col">
          <div class="info_contact">
            <h4>
              Booktopia
            </h4>
            <div class="contact_link_box">
              <a asp-controller="Home" asp-action="Index">
                <span>
                  Home
                </span>
              </a>
              <a asp-controller="Books" asp-action="All">
                <span>
                  Books
                </span>
              </a>
              <a asp-controller="Categories" asp-action="All">
                <span>
                  Categories
                </span>
              </a>
              <a asp-controller="Quotes" asp-action="All">
                <span>
                  Quotes
                </span>
              </a>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3 info-col">
          <div class="info_contact">
            <h4>
              Company Partners
            </h4>
            <div class="contact_link_box">
              <a href="">
                <span>
                  Hermes
                </span>
              </a>
              <a href="">
                <span>
                  Helicon
                </span>
              </a>
              <a href="">
                <span>
                  Orange
                </span>
              </a>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-3 info-col">
          <div class="info_contact">
            <h4>
              Contact Us
            </h4>
            <div class="contact_link_box">
              <a href="">
                <i class="fa fa-map-marker" aria-hidden="true"></i>
                <span>
                  Maria Luisa Bullevard 202A
                </span>
              </a>
              <a href="">
                <i class="fa fa-phone" aria-hidden="true"></i>
                <span>
