@model WriteBookFormModel

@{
    ViewData["Title"] = "Write book";
}

<section class="contact_section layout_padding">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-9 ">
          <div class="heading_container heading_center">
            <h2>
              Write your book
            </h2>
          </div>
          <form method="post">
              <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Untitled book">
              </div>
              <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Cover of your book">
              </div>
              <div class="form-group">
                <label asp-for="Annotation"></label>
                <textarea asp-for="Annotation" class="form-control" placeholder="The book is about...?" rows="8"></textarea>
              </div>
               <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                   @foreach (var category in Model.Categories)
                    {
                       <option value="@category.Id">@category.Type</option>         
                    }
                </select>
              </div>
               <div class="btn-box">
                  <input class="input-button" type="submit" value="Create"/> 
               </div>
           </form>
        </div>
      </div>
    </div>
  </section>

 
