@model IEnumerable<BookListingViewModel>

@{
    ViewData["Title"] = "Books";
}

<section class="blog_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>
          From Our Bookshelves
        </h2>
      </div>

      @if(!Model.Any())
            {
                <div>
                    <h4 class="text-center">There are no books available.</h4>
                </div>
                <div class="text-center">
                  <a asp-controller="Books" asp-action="Write" >
                      Start Writing
                    </a>
               </div>
            }

      <div class="row">
            
            @foreach(var book in Model)
            {
                <div class="col-md-4">
                      <div class="box">
                        <div class="img-box">
                          <img src="@book.ImageUrl" style="height: 240px;" alt="@book.Title" >
                          <h4 class="blog_date">
                            <span>
                              @book.Author
                            </span>
                          </h4>
                        </div>
                        <div class="detail-box">
                          <h5>
                              @book.Title
                          </h5>
                          <h6 class="font-italic font-weight-bold">@book.Category</h6>
                          <p>
                            @book.Annotation...
                          </p>
                          <a asp-controller="Books" asp-action="Book" asp-route-id="@book.Id">
                            Read More
                          </a>
                        </div>
                      </div>
                    </div>
            }
      </div>
    </div>
  </section>