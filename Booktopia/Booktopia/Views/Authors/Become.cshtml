@model BecomeAuthorFormModel

@{
    ViewData["Title"] = "Become Author";
}

<section class="contact_section layout_padding">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-9 ">
          <div class="heading_container heading_center">
            <h2>
              Become Author
            </h2>
          </div>
          <form method="post">
              <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name or pseudonym for your books">
                <span asp-validation-for="Name" class="small text-danger"></span>
              </div>
              <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Tell your readers something about you" rows="5"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
              </div>
               <div class="btn-box">
                  <input class="input-button" type="submit" value="Become"/> 
               </div>
           </form>
        </div>
      </div>
    </div>
  </section>

 
