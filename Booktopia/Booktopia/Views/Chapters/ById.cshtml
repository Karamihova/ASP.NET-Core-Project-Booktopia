@model ChapterViewModel

@{
    ViewData["Title"] = @Model.Title;
}

<section class="blog_section layout_padding">
    <div class="container ">
        <div class="heading_container heading_center" style="margin-bottom: 35px;">
              <h2>
                @Model.Title 
              </h2>
              <div class="detail-box col-md-9">
                <p align="left" style="margin-top: 20px;">
                  @Model.Text
                </p>
              </div>
            @if (User.IsAdmin() || (User.GetId() == Model.UserId))
            {
                <a asp-controller="Chapters" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a asp-controller="Chapters" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
            }
        </div>
    </div>
  </section>